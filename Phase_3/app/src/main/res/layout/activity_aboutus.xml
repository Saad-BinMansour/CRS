<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Aboutus">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/top_rectangle"
        android:visibility="visible"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="59dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/crs_logo" />
        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/aboutustext" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/britanic_bold"
            android:textColor="#1a4c65"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_rectangle"
        android:onClick="bookmarkbutton"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="90dp"
            android:onClick="settingsButton"
            android:src="@drawable/wheelicon"></ImageView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:onClick="homebutton"
            android:src="@drawable/homepage_ic_noncolor"></ImageView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/hearticon"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="352dp"
        android:layout_height="482dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="With CRS, it’s easy to find the right components for your PC based on your needs.
There are thousands of products on CRS. So whether you’re an engineer, gamer, designer or student, the right products are always at your fingertips.
Choose what you want to use, or let CRS surprise you.  You can also browse by using a filter.
Let CRS choose for you and Enjoy it."
        android:textColor="#1a4c65"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="46dp"
        android:fontFamily="sans-serif"
        android:text="Est. 2020"
        android:textColor="#1a4c65"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>