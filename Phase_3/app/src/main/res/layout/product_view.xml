<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sourceimage"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="230dp"
        android:layout_toEndOf="@+id/gototext"
        android:src="@drawable/newegg_ic" />

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="113dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="298dp"
        android:adjustViewBounds="true"
        android:contentDescription="TODO"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_prod_ex" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="215dp"
        android:layout_height="243dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/product_img"
        android:src="@drawable/nam_prod_ex"
        android:text="HP Pavilion x360 15.6&#34; HD 2 in 1 Touchscreen Laptop Home and Business Notebook Core i5-8265U, 12GB RAM, 512GB SSD, Quad-Core up to 3.90 GHz, USB-C, UHD Graphics 620, Keypad, WebCam, Win 10"
        android:textColor="#000"
        android:textSize="12.5sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="230dp"
        android:layout_toRightOf="@id/product_img"
        android:text="2450"
        android:textColor="#17789F"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="230dp"
        android:layout_toEndOf="@+id/product_price"
        android:layout_toRightOf="@id/product_img"
        android:text="SAR"
        android:textColor="#17789F"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/gototext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="230dp"
        android:layout_toRightOf="@id/product_price"
        android:text="Go To:"
        android:textColor="#595555"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/bookmark"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="346dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tobookmark_ic" />

</RelativeLayout>
